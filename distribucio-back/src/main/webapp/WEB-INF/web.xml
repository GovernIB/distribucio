<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
		version="4.0">
	<display-name>distribucio</display-name>
	<login-config>
		<auth-method>KEYCLOAK</auth-method>
		<realm-name>Govern de les Illes Balears</realm-name>
	</login-config>
	<security-role>
		<role-name>DIS_SUPER</role-name>
	</security-role>
	<security-role>
		<role-name>DIS_ADMIN</role-name>
	</security-role>
	<security-role>
		<role-name>DIS_ADMIN_LECTURA</role-name>
	</security-role>
	<security-role>
		<role-name>DIS_REGLA</role-name>
	</security-role>
	<security-role>
		<role-name>DIS_BSTWS</role-name>
	</security-role>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Public areas</web-resource-name>
			<url-pattern>/public/*</url-pattern>
			<url-pattern>/ws/v0/bustia</url-pattern>
			<url-pattern>/ws/v1/bustia</url-pattern>
			<url-pattern>/ws/backofficeIntegracio</url-pattern>
			<url-pattern>/api-docs</url-pattern>
			<url-pattern>/api-docs/*</url-pattern>
			<url-pattern>/js/*</url-pattern>
			<url-pattern>/css/*</url-pattern>
			<url-pattern>/img/*</url-pattern>
			<url-pattern>/imgages/*</url-pattern>
			<url-pattern>/webjars/*</url-pattern>
			<url-pattern>/images/*</url-pattern>
		</web-resource-collection>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>All areas</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>**</role-name>
		</auth-constraint>
	</security-constraint>
	<jsp-config>
		<taglib>
			<taglib-uri>http://www.opensymphony.com/sitemesh/decorator</taglib-uri>
			<taglib-location>tags/sitemesh-decorator.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://www.opensymphony.com/sitemesh/page</taglib-uri>
			<taglib-location>tags/sitemesh-page.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://www.springframework.org/tags</taglib-uri>
			<taglib-location>tags/spring.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>http://www.springframework.org/tags/form</taglib-uri>
			<taglib-location>tags/spring-form.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>
